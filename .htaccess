RewriteEngine On

RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule !.*\.php$ %{REQUEST_FILENAME}.php [QSA,L]

## (ROTEAMENTO) REDIRECIONA TODOS OS URL'S PRA HOME PARA TRATAMENTO ##
ErrorDocument 404 /akiba_2.0/site/index.php

